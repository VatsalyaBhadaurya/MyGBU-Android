<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyGBU" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Colors (Dark Mode) -->
        <item name="colorPrimary">@color/university_accent</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/university_accent</item>
        
        <!-- Secondary Brand Colors (Dark Mode) -->
        <item name="colorSecondary">@color/university_primary</item>
        <item name="colorSecondaryContainer">@color/primary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryContainer">@color/university_primary</item>
        
        <!-- Tertiary/Accent Colors (Dark Mode) -->
        <item name="colorTertiary">@color/university_secondary</item>
        <item name="colorTertiaryContainer">@color/error_red</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorOnTertiaryContainer">@color/university_secondary</item>
        
        <!-- Surface Colors (Dark Mode) -->
        <item name="colorSurface">@color/background_dark</item>
        <item name="colorSurfaceVariant">@color/primary_dark</item>
        <item name="colorOnSurface">@color/text_inverse</item>
        <item name="colorOnSurfaceVariant">@color/text_tertiary</item>
        
        <!-- Background Colors (Dark Mode) -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/text_inverse</item>
        
        <!-- Error Colors (Dark Mode) -->
        <item name="colorError">@color/error_accent</item>
        <item name="colorErrorContainer">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnErrorContainer">@color/error_accent</item>
        
        <!-- Outline Colors (Dark Mode) -->
        <item name="colorOutline">@color/text_tertiary</item>
        <item name="colorOutlineVariant">@color/text_disabled</item>
        
        <!-- Status Bar and Navigation Bar (Dark Mode) -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Typography (Dark Mode) -->
        <item name="android:textColorPrimary">@color/text_inverse</item>
        <item name="android:textColorSecondary">@color/text_tertiary</item>
        <item name="android:textColorTertiary">@color/text_disabled</item>
        
        <!-- Ripple and Selection (Dark Mode) -->
        <item name="colorControlHighlight">@color/university_accent</item>
        <item name="android:colorControlNormal">@color/university_accent</item>
        
        <!-- Card and Dialog Styling (Dark Mode) -->
        <item name="cardBackgroundColor">@color/primary_dark</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        
        <!-- Button Styling (Dark Mode) -->
        <item name="materialButtonStyle">@style/Widget.MyGBU.Button.Dark</item>
        <item name="textInputStyle">@style/Widget.MyGBU.TextInputLayout.Dark</item>
    </style>
    
    <!-- Custom Button Style (Dark Mode) -->
    <style name="Widget.MyGBU.Button.Dark" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/university_accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Custom Text Input Style (Dark Mode) -->
    <style name="Widget.MyGBU.TextInputLayout.Dark" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/university_accent</item>
        <item name="hintTextColor">@color/university_accent</item>
        <item name="android:textColorHint">@color/text_disabled</item>
    </style>
</resources>