<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Widget Style -->
    <style name="Widget.MyGBU" parent="">
        <!-- Base attributes that all widgets might share -->
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.MyGBU.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyGBU.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextAppearance.MyGBU.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextAppearance.MyGBU.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.MyGBU.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="backgroundTint">@color/gbu_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.MyGBU.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="Widget.MyGBU.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.MyGBU.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/gbu_surface</item>
        <item name="strokeColor">@color/gbu_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <!-- Input Styles -->
    <style name="Widget.MyGBU.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_radius</item>
        <item name="boxStrokeColor">@color/gbu_primary</item>
        <item name="hintTextColor">@color/gbu_primary</item>
        <item name="endIconTint">@color/gbu_primary</item>
        <item name="startIconTint">@color/gbu_primary</item>
    </style>

    <style name="Widget.MyGBU.TextInputLayout.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_radius</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.MyGBU.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/ripple_color</item>
        <item name="elevation">@dimen/card_elevation</item>
    </style>

    <!-- Header Style -->
    <style name="Widget.MyGBU.Header" parent="Widget.MyGBU">
        <item name="android:background">@drawable/header_gradient</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <!-- List Item Styles -->
    <style name="Widget.MyGBU.ListItem" parent="Widget.MyGBU">
        <item name="android:minHeight">@dimen/d72</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Dialog Styles -->
    <style name="Widget.MyGBU.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="dialogCornerRadius">@dimen/card_corner_radius</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.MyGBU.Display1" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/error</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyGBU.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources> 