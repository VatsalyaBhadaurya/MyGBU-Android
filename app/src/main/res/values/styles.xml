<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.MyGBU.Display1" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/gbu_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyGBU.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/gbu_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyGBU.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gbu_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyGBU.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gbu_text_secondary</item>
    </style>

    <style name="TextAppearance.MyGBU.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gbu_text_primary</item>
    </style>

    <style name="TextAppearance.MyGBU.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gbu_text_secondary</item>
    </style>
</resources> 