<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/padding_xlarge">

        <!-- App Logo -->
        <ImageView
            android:layout_width="@dimen/d120"
            android:layout_height="@dimen/d120"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="@dimen/margin_xlarge" />

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to MyGBU"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select your portal"
            android:textSize="@dimen/text_medium"
            android:layout_marginBottom="@dimen/margin_xlarge" />

        <!-- Portal Selection Buttons -->
        <Button
            android:id="@+id/btn_faculty_dashboard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="Access Faculty Dashboard"
            android:textAllCaps="false"
            android:textSize="@dimen/text_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <Button
            android:id="@+id/btn_student_portal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="Access Student Portal"
            android:textAllCaps="false"
            android:textSize="@dimen/text_medium"
            android:enabled="false"
            android:alpha="0.6" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>