<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Request Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Person Name -->
        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Person ID: STU001"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Person Type -->
        <TextView
            android:id="@+id/tv_person_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: STUDENT"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Request Type -->
        <TextView
            android:id="@+id/tv_request_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request: ONBOARDING"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: PENDING"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Submitted Date -->
        <TextView
            android:id="@+id/tv_submitted_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submitted: 2024-01-15"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Documents Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Documents RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</ScrollView> 