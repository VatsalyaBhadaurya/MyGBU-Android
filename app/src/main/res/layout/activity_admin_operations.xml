<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_reports"
        app:tint="@color/primary_color"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tv_placeholder_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Operations Dashboard &amp; Escalation Management"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_placeholder_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This module will allow you to manage operations and escalations."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</LinearLayout> 